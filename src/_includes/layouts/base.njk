<!doctype html>
<html lang="en" class="no-js">
<head>
  <meta charset="utf-8">
  <script>
    document.documentElement.className = document.documentElement.className.replace(/\bno-js\b/g, '') + 'has-js ';
  </script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="{{ renderData.description or description or metadata.description }}">
  <title>{{ renderData.title or title or metadata.title }}</title>
  <link href="https://fonts.googleapis.com/css?family=Merriweather&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles/index.css">
</head>
<body id="top" itemscope itemtype="http://schema.org/WebPage">
  <div class="container">
    {{ content | safe }}
    <div class="menu">
      <nav class="menu__nav">
          <ul class="menu__list">
              <li>
                  <a class="menu__item" href="/">
                      <span class="icon-home"></span>
                      <span>{{siteData.link_home}}</span>
                  </a>
              </li>
              <li>
                  <a class="menu__item" href="/boda/">
                      <span class="icon-heart"></span>
                      <span>{{siteData.link_wedding}}</span>
                  </a>
              </li>
              <li>
                  <a class="menu__item" href="/restaurante/">
                      <span class="icon-map-pin"></span>
                      <span>{{siteData.link_restaurant}}</span>
                  </a>
              </li>
              <li>
                  <a class="menu__item" href="/contacto/">
                      <span class="icon-message-circle"></span>
                      <span>{{siteData.link_contact}}</span>
                  </a>
              </li>
          </ul>
      </nav>
  </div>
  </div>
  <script src="/scripts/index.js"></script>
</body>
</html>
